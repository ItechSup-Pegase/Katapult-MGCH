{% extends "AppBundle:Event:layout.html.twig" %}

{% block content -%}
    <h1>Event edit</h1>

    {{ form_start(edit_form) }}
        <div class="form-horizontal">
            {% for item in edit_form  if item.vars['name'] != '_token' %}
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        {{ form_label(item) }}
                    </label>
                    <div class ="col-sm-10">
                        {{ form_widget(item) }}
                    </div>
                </div>
            {% endfor %}
            <div class ="form-group">
                <div class='line-bottom col-sm-2'>
                        <a href="{{ path('event_show', { 'id': entity.id }) }}">
                            <span class="glyphicon glyphicon-arrow-left" aria-hidden=""true"></span> Back
                        </a>
                </div>
                <div class= "col-sm-10">
                    <ul class="list-inline"
                        <li><button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-ok" aria-hidden=true"></span> Update</button></li>
                    
             
            {{ form_widget(edit_form._token) }}
          
    
    {{ form_end(edit_form) }}  
                        <li>
    {{ form_start(delete_form) }}  
                        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-remove" aria-hidden=""true"></span> Delete</button></li>
                    </ul>
    {{ form_end(delete_form) }}
    
                </div>
                    
            </div>
        </div>
{% endblock %}
