{% extends "AppBundle:Event:layout.html.twig" %}

{% block content -%}
    <h1>Event list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Formation</th>
                <th>Date</th>
                <th width='10%'>Show</th>
                <th width='10%'>Edit</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <tr>
                <td>{{ entity.formation.name }}</td>
                
                <td width="10%">
                    <a href="{{ path('event_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden=""true"></span></a>
                </td>
                <td width="10%">
                    <a href="{{ path('event_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit" aria-hidden=""true"></span></a>
                </td>
            </tr>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    {% endblock %}
