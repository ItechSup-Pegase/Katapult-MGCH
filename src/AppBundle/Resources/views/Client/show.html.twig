{% extends "AppBundle:Client:layout.html.twig" %}

{% block content %}
    {{include('AppBundle:Client:client_detail.html.twig',{ 'entity': entity})}}
    
    
    <div class='col-sm-3 line-bottom'>
        <a href="{{ path('client') }}">
            <span class="glyphicon glyphicon-arrow-left" aria-hidden=""true"></span> Back to the list
        </a>
    </div>
            <div class='col-sm-6'></div>
    <div class='col-sm-3'>                
        <ul class='list-inline'>
            <li>
                <a href="{{ path('client_edit', { 'id': entity.id }) }}">
                    <button type="button" class="btn btn-primary">            
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
                    </button>
                </a>
            </li>
            <li>
                 <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">
                  Supprimer
                </button>
            </li>
        </ul>
    </div>
    
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
