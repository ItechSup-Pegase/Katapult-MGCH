{% extends "AppBundle:Client:layout.html.twig" %}

{% block content -%}
    <h1><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Client List</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Entreprise</th>
                <th width='10%'>Show</th>
                <th width='10%'>Edit</th>
                <th width='10%'>Delete</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.entreprise }}</td>
                <td width='10%'>
                    <a href="{{ path('client_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                </td>
                <td width='10%'>
                    <a href="{{ path('client_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                </td>
                <td width='10%'>
                    <a data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
